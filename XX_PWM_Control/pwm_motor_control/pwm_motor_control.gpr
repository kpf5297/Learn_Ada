with "config/pwm_motor_control_config.gpr";
with "config/stm32_hal_config.gpr";
project Pwm_Motor_Control is

   -- added target platform configuration
   for Target use "arm-eabi";
   for Runtime ("Ada") use "embedded-" & stm32_hal_config.DEVICE & "disco";

   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Pwm_Motor_Control_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("main.adb");

   package Compiler is
      for Default_Switches ("Ada") use Pwm_Motor_Control_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Pwm_Motor_Control;
